# =============================================================================
# API_AUTH - Environment Variables Template
# =============================================================================
# Copy this file to .env and configure your actual values
# For Railway deployment, these will be set in the Railway dashboard

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Railway PostgreSQL connection URL (automatically provided by Railway)
# Format: postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://user:password@localhost/api_auth

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Secret key for JWT token signing (CRITICAL: Use a strong secret in production)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# JWT Algorithm (typically HS256)
JWT_ALGORITHM=HS256

# Token expiration times
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================
# Base URL for the external inventory API
INVENTORY_API_BASE_URL=https://inventoryapp.usbtopia.usbbog.edu.co

# =============================================================================
# MONITORING & DEBUGGING
# =============================================================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=your-sentry-dsn-here

# Debug mode (set to false in production)
DEBUG=false

# SQL Debug (set to true only for debugging database queries)
SQL_DEBUG=false

# =============================================================================
# RAILWAY SPECIFIC
# =============================================================================
# Port for the application (Railway sets this automatically)
PORT=8000

# =============================================================================
# SECURITY & CORS
# =============================================================================
# Allowed origins for CORS (comma-separated for multiple domains)
# Use "*" for development only, specify actual domains in production
ALLOWED_ORIGINS=*

# =============================================================================
# EXAMPLE VALUES FOR LOCAL DEVELOPMENT
# =============================================================================
# For local development, you can use these values:
# DATABASE_URL=postgresql://api_auth_user:your_password@localhost:5432/api_auth_db
# JWT_SECRET_KEY=development-secret-key-change-in-production
# INVENTORY_API_BASE_URL=https://inventoryapp.usbtopia.usbbog.edu.co
# DEBUG=true
# SENTRY_DSN=
# PORT=8000